{
  "name": "rewordlabs",
  "version": "0.0.0",
  "private": true,
  "description": "The localization framework for developers",
  "keywords": [],
  "author": "Hugo Corta <corta.hugo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm -r --parallel --filter=./{packages,core}/** dev",
    "build-fast": "pnpm -r --parallel --filter=./{packages,core}/** build-fast",
    "build": "pnpm -r --filter=./{packages,core}/** build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "update": "pnpm -r --filter=./{packages,core}/** upgrade",
    "clean": "pnpm -r --parallel exec rimraf node_modules dist .next && rimraf node_modules",
    "fix": "pnpm lint:fix . && pnpm format:fix .",
    "lint": "eslint --cache",
    "lint:check": "pnpm lint",
    "lint:fix": "pnpm lint --fix",
    "styles": "stylelint --cache",
    "styles:check": "pnpm styles",
    "styles:fix": "pnpm styles --fix",
    "format": "prettier --cache",
    "format:check": "pnpm format --check",
    "format:fix": "pnpm format --write",
    "types": "tsc",
    "types:check": "pnpm types --noEmit",
    "prepare": "husky install",
    "release": "changeset publish",
    "release-dev": "changeset version --snapshot dev && changeset publish --tag dev",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "next": "latest",
    "outdent": "^0.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@rewordlabs/types": "workspace:*",
    "@types/node": "^20.8.2",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.8",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-next": "^13.5.4",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
