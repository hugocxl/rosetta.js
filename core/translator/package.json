{
  "name": "@rewordlabs/translator",
  "description": "Code translator for Reword",
  "version": "0.4.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "author": "Hugo Corta <corta.hugo@gmail.com>",
  "scripts": {
    "dev": "tsup --format=esm,cjs --no-dts --watch",
    "build": "tsup"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./translators": {
      "types": "./dist/translators/index.d.ts",
      "require": "./dist/translators/index.js",
      "import": "./dist/translators/index.mjs"
    }
  },
  "dependencies": {
    "@google-cloud/translate": "^8.0.2",
    "@rewordlabs/runtime": "workspace:*",
    "@rewordlabs/utils": "workspace:*",
    "openai": "^4.11.1"
  },
  "devDependencies": {
    "@rewordlabs/types": "workspace:*"
  }
}
