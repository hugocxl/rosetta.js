{
  "name": "@koi18n/react",
  "description": "koi18n for React.js",
  "version": "0.0.7",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "require": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Hugo Corta <corta.hugo@gmail.com>",
  "scripts": {
    "dev": "tsup --format=esm,cjs --no-dts --watch",
    "build": "tsup"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./core/server": {
      "types": "./dist/core/server/index.d.ts",
      "require": "./dist/core/server/index.js",
      "import": "./dist/core/server/index.mjs"
    },
    "./core/client": {
      "types": "./dist/core/client/index.d.ts",
      "require": "./dist/core/client/index.js",
      "import": "./dist/core/client/index.mjs"
    }
  },
  "dependencies": {
    "@koi18n/formatter": "workspace:*",
    "@koi18n/ts": "workspace:*",
    "@koi18n/utils": "workspace:*",
    "@legendapp/state": "^1.11.3",
    "client-only": "^0.0.1",
    "intl-messageformat": "^10.5.4",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@koi18n/types": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.x"
  }
}
