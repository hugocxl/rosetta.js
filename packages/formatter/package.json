{
  "name": "@rewordlabs/formatter",
  "description": "Code formatter for Reword",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "author": "Hugo Corta <corta.hugo@gmail.com>",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "pnpm build-fast --watch",
    "build": "tsup",
    "build-fast": "tsup --format=esm,cjs --no-dts"
  },
  "dependencies": {
    "@rewordlabs/node": "workspace:*",
    "@rewordlabs/utils": "workspace:*"
  },
  "devDependencies": {
    "@rewordlabs/types": "workspace:*"
  }
}
